@{
    ViewData["Title"] = "Admin";
}

@model ICollection<web_app.Models.CustomUser>
<div class="text-center">
    <h1 class="display-4">Users</h1>
</div>

@if (@Model != null && @Model.Any())
{
    <div class="text-center">
        <table class="table">
            <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Full Name</th>
                <th scope="col">Email</th>
                <th scope="col">Edit</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var user in Model)
            {   
                <tr>
                    <th scope="row">@user.Id</th>
                    <td>@user.FullName</td>
                    <td>@user.Email</td>
                    <td><a asp-controller="Admin" asp-action="Edit" asp-route-id="@user.Id">Edit</a></td>
                </tr>
            }
            </tbody>
        </table> 
    </div>
    <div class="text-center">
        @*IMPORTANT*@
        <a asp-area="Identity" asp-page="/Account/Register">Add User</a>
        <a asp-area="Identity" asp-page="/Account/Register" value="Admin">Add Admin</a>
    </div>
}